# Environment Variables for Alteryx to PySpark Converter
# Copy this file to .env and fill in your actual values

# AI Provider Settings
# Options: gemini, openai, anthropic, ollama, local
AI_PROVIDER=gemini

# API Keys (get your keys from the respective providers)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Ollama Settings (for local LLMs)
# Default: http://localhost:11434
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=codellama

# Application Settings
ADMIN_TIMEOUT=60
MAX_FILE_SIZE_MB=50
DEBUG_MODE=False

# Database Settings
DATABASE_PATH=usage_data.db

# Logging Settings
# Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_PATH=logs/

# Server Settings
HOST=0.0.0.0
PORT=8000